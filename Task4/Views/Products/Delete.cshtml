@model Task4.Models.Product

<h1>Удаление товара</h1>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id"/>
    <dl>
        <dt>Название товара</dt>
        <dd>
            @Html.DisplayFor(product => product.Name)
        </dd>
        <dt>Цена</dt>
        <dd>
            @Html.DisplayFor(product => product.Price)
        </dd>
        <dt>Количество</dt>
        <dd>
            @Html.DisplayFor(product => product.Quantity)
        </dd>
    </dl>
    <button type="submit" class="btn btn-danger" style="margin-top: 10px">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top: 10px; margin-left: 10px">Отмена</a>
</form>